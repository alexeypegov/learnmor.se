{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitUseStrict": true,
        "removeComments": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "pretty": true,
        "lib": [
          "dom",
          "es5"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "files": [
      "src/storage.ts",
      "src/morse.ts",
      "src/browser.ts",
      "src/data.ts",
      "src/app.ts",
      "src/wav.ts"
    ]
}
